% ATTACHMENT AMBIGUITY and CONTROL VERB

% It was not hard for John to steal Joanna's bag
%   (lit. to-John bag of Joanna not was hard to-steal)
% testcase("Ivanu torbu od Ivane nije bilo teško ukrasti",




test_sentence <- [pred].
test_sentence(W, CC) :-
  print(W),
  parse(W),
  trees(TT),
  length(TT, TL),
  length(CC, CL),
  printAVM(["Found", TL, "parse trees for", CL, "canonical parses"]),
  set_difference(CC, TT, NF),
  NF = [].

test_list <- [pred].
test_list([]).
test_list([[W, CC] | LL]) :-
  (test_sentence(W, CC)
    -> print("==> OK  :)")
    ;  print("==> Failed")),
  test_list(LL).

test :-
  findall([W, T], testcase(W, T), CC),
  test_list(CC).
